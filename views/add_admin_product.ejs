<%- include layouts/header.ejs %>
<main class="content-user">

<h1>Add New Product</h1>

<div class="page-data">
            
    <form method="post" action="/products/add">
        <table cellpadding="11">
        <tr>
            <td class="label">Name</td><td><input type="text" name="name" required></td>
         </tr>
         <tr>
            <td class="label" valign="top">Description</td><td valign="top"><textarea name="description" required cols="30" rows="5"></textarea></td>
        </tr>
        <tr>
            <td class="label">Allergen Info</td><td><input type="text" name="allergen" required></td>
         </tr>
          <tr>
            <td class="label">Category ID</td><td><input type="text" name="category" required> <p>1:cakes, 2:brownies, 3:cupcakes, 4:cookies</p></td>
        </tr>
         <tr>
            <td class="label">Image Url</td><td><input type="text" name="image" required></td>
         </tr>
 
         <tr>
            <td class="label"></td>
            <td>
                &nbsp; <input type="submit" name="submit" value="Save">
               <a href="/adminproducts" target="" class="btn-secondary" role="button" aria-pressed="true">
                Cancel
            </a>
            </td>
         </tr>
        </table>
    </form>
    
</div>
</main>
<%- include layouts/footer.ejs %>