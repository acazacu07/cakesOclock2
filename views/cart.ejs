<%- include layouts/header.ejs %>

    <!-- main content -->
    <main class="">
        <h1 class="tex-center"> Your Order </h1>
        <section class="container mb-1">
            <table id="checkout-products">
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
                <tr> 
                <div class= "cart-items">
                <tr>
                    <td class="flex-container">
                    <div class ="cart-row">
                        <div class="img-table">
                            <img %src% class="img" alt="%name%" title="%name%">
                        </div>
                        <div class="description-table">
                            <h2 class="text-left">%name%</h2>
                            <h3> Allergen Information:</h3>
                            <p class="text-justify">  %allergen_info%</p>
                            <p class="text-justify"> %size_name%</p>
                            <button id ='remove-cart' target="" class="btn-remove-cart" type ="button" aria-pressed="true">
                                Remove from Cart</button> 
                        
                        <td class="qtycol">
                            <form class="pl-2">
                                <button class="minus-btn" type="button" name="button">-</button>
                                <span class="item-quantity" type = "number">%quantity%</span>
                                <button class="plus-btn" type="button" name="button">+</button>
                            </form>
                        </td>
                        <td>
                            <span class = "cart-price">
                                <h3 class="text-center">€%price%</h3>
                            </span>
                        </td>
                        
                        </div>
                    </div>
                    </td> 
                </tr>  
                <tr>
                    <td class="flex-container">
                    <div class ="cart-row">
                        <div class="img-table">
                            <img src="/img/products/choco_cake.jpg"  class="img" alt="cake">
                        </div>
                        <div class="description-table">
                            <h2 class="text-left">Chocolate Cake</h2>
                            <h3> Allergen Information:</h3>
                            <p class="text-justify">  Gluten (Wheat), Eggs, Milk, Sulphites</p>
                            <p class="text-justify"> 8 - 10 portions</p>
                            <button id ='remove-cart' target="" class="btn-remove-cart" type ="button" aria-pressed="true">
                                Remove from Cart</button> 
                        
                        <td>
                            <form class="pl-2">
                                <button class="minus-btn" type="button" name="button">-</button>
                                <span class="item-quantity" type = "number">0</span>
                                <button class="plus-btn" type="button" name="button">+</button>
                            </form>
                          </td>
                        <td>
                            <span class = "cart-price">
                                <h3 class="text-center">€20</h3>
                            </span>
                        </td>
                        
                      </div>
                    </div>
                      </td> 
                </tr>  
            </div>
          </tr>
            </table>
            <div class="location-box">
                <div class="payment-card">
                    <h2 class="text-center product-name mb-1 pb-1">Choose Pick Up Location</h2>

                        <select id="location" name = "location" class="mt-1">  </select>
                </div>
                <div class="cart-total mt-2">
                    <h2 class="text-center product-name mb-1 pb-1">Cart Total</h2>
                    <h3 class="price-text mb-1">€0</h3>
                </div>
            </div>
        </section>
        <section class="container mb-1">
            <div class="mr-1">
               
                <button target="" class="btn-checkout" role="button" aria-pressed="true">
                    CONTINUE TO CHECKOUT
                </button>
            </div>
            <div class="mr-1">
                <button target="" class="btn-empty-cart" role="button" aria-pressed="true">
                    EMPTY CART
                </button>
            </div>
        </section>
    </main>

   <%- include layouts/footer.ejs %>
